@model IEnumerable<Category>

<h1>Categories</h1>

<table class="table table-bordered">
    <thead>
        <tr>
           <td>
            Category Name
           </td> 
           <td>
            Description
           </td>
            <td>
            Action
           </td> 
        </tr>
    </thead>
    <tbody>
        @foreach (Category cat in Model)
        {
            <tr>
                <td>
                @cat.CategoryName
            </td>
            <td>
                @cat.Description
            </td>
            <td>
                <a class="btn btn-warning" asp-controller="Category" asp-action="Edit" asp-route-id=@cat.CategoryId>Update</a>
                <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id=@cat.CategoryId>Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Category" asp-action="Add">Add</a>